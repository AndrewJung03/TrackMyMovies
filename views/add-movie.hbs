<form action="/add-movie" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" class="form-control mb-3" required>

  <label for="picture">Picture URL:</label>
  <input type="text" id="picture" name="picture" class="form-control mb-3">

  <label for="review">Review (1-5):</label>
  <input type="number" id="review" name="review" min="1" max="5" class="form-control mb-3">

  <label for="note">Note:</label>
  <textarea id="note" name="note" class="form-control mb-3"></textarea>

  <label for="release">Release Date:</label>
  <input type="date" id="release" name="release" class="form-control mb-3">

  <button type="submit" class="btn btn-primary">Add Movie</button>
  <button type="reset" class="btn btn-secondary">Clear Form</button>
</form>